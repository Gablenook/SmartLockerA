<Window x:Class="SmartLockerKiosk.ControllerSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Controller Setup"
        Height="520"
        Width="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Detect + list -->
            <RowDefinition Height="Auto"/>
            <!-- Branch selection -->
            <RowDefinition Height="Auto"/>
            <!-- Test -->
            <RowDefinition Height="*"/>
            <!-- Status -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Controller Setup" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Detect USB/RS232 ports, assign Branch A/B, save to local DB, and test connectivity."
                       Opacity="0.8"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Detect -->
        <GroupBox Grid.Row="1" Header="Detect" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="DetectButton"
                        Grid.Column="0"
                        Content="Detect Controllers"
                        Width="160"
                        Height="32"
                        FontSize="17"
                        Margin="0,0,10,0"
                        Click="DetectControllers_Click"/>

                <ListBox x:Name="PortsListBox"
                         Grid.Column="1"
                         Height="80"/>
            </Grid>
        </GroupBox>

        <!-- Branch selection -->
        <GroupBox Grid.Row="2" Header="Branch Assignment" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Branch A:" VerticalAlignment="Center" Margin="0,0,8,8"/>
                <ComboBox x:Name="BranchAComboBox" Grid.Row="0" Grid.Column="1" Margin="0,0,10,8" MinWidth="160"/>

                <Button Grid.Row="0" Grid.Column="2"
                        Content="Test A"
                        Width="90"
                        Height="28"
                        FontSize="14"
                        Margin="0,0,0,8"
                        Click="TestA_Click"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Branch B:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="BranchBComboBox" Grid.Row="1" Grid.Column="1" Margin="0,0,10,0" MinWidth="160"/>

                <Button Grid.Row="1" Grid.Column="2"
                        Content="Test B"
                        Width="90"
                        Height="28"
                        FontSize="14                        "
                        Click="TestB_Click"/>
            </Grid>
        </GroupBox>

        <!-- Save -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="LoadSavedButton"
                    Content="Load Saved"
                    Width="110"
                    Height="32"
                    FontSize="16"
                    Margin="0,0,8,0"
                    Click="LoadSaved_Click"/>
            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="110"
                    Height="32"
                    FontSize="16"
                    Margin="0,0,8,0"
                    Click="SavePorts_Click"/>
        </StackPanel>

        <!-- Status -->
        <Border Grid.Row="4" Background="#FFF3F3F3" CornerRadius="6" Padding="10" Margin="0,0,0,10">
            <TextBlock x:Name="StatusText"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Text="Tip: Detect → select A/B → Save → Test."/>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Close" Width="110" Height="32" FontSize="16" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
