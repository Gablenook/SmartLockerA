<Window x:Class="SmartLockerKiosk.LockerSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Locker Setup"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#00205B">

    <Window.Resources>
        <x:Array x:Key="BranchOptions" Type="{x:Type sys:String}">
            <sys:String>A</sys:String>
            <sys:String>B</sys:String>
        </x:Array>
    </Window.Resources>

    <Grid>
        <!-- Scale the whole admin UI to the screen, like the kiosk -->
        <Viewbox Stretch="Uniform">
            <!-- Design surface -->
            <Grid Width="800" Height="1200" Margin="20" Background="#00205B">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top buttons -->
                <Border Grid.Row="0"
        CornerRadius="14"
        Background="#30FFFFFF"
        Padding="14"
        Margin="0,0,0,14">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: 2 rows x 2 columns, uniform sizing -->
                        <Grid Grid.Column="0" Margin="0,0,14,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Row 0 -->
                            <Button Grid.Row="0" Grid.Column="0"
                    Content="Load"
                    Width="240" Height="60"
                    Margin="0,0,12,12"
                    Click="Load_Click"
                    FontSize="22" FontWeight="SemiBold"/>

                            <Button Grid.Row="0" Grid.Column="1"
                    Content="Add Locker"
                    Width="240" Height="60"
                    Margin="0,0,0,12"
                    Click="Add_Click"
                    FontSize="22" FontWeight="SemiBold"/>

                            <!-- Row 1 -->
                            <Button Grid.Row="1" Grid.Column="0"
                    Content="Remove Selected"
                    Width="240" Height="60"
                    Margin="0,0,12,0"
                    Click="Remove_Click"
                    FontSize="22" FontWeight="SemiBold"/>

                            <Button Grid.Row="1" Grid.Column="1"
                    Content="Save"
                    Width="240" Height="60"
                    Margin="0,0,0,0"
                    Click="Save_Click"
                    FontSize="22" FontWeight="SemiBold"/>
                        </Grid>

                        <!-- RIGHT: Close spans both rows and stays aligned -->
                        <Button Grid.Column="1"
                Content="Close"
                Width="200" Height="132"
                Click="Close_Click"
                FontSize="22" FontWeight="SemiBold"
                Background="#CCFF3B30"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"/>
                    </Grid>
                </Border>


                <!-- Data grid -->
                <Border Grid.Row="1"
                        CornerRadius="14"
                        Background="#20FFFFFF"
                        Padding="12"
                        Margin="0,0,0,14">
                    <DataGrid x:Name="LockersGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              SelectionMode="Extended"
                              SelectionUnit="FullRow"
                              HeadersVisibility="Column"
                              RowHeight="46"
                              ColumnHeaderHeight="50"
                              FontSize="18"
                              Background="White"
                              GridLinesVisibility="All"
                              Margin="0">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="LockerId"
                                                Binding="{Binding LockerId}"
                                                Width="90"
                                                IsReadOnly="False"/>

                            <DataGridComboBoxColumn Header="Branch"
                                                    Width="90"
                                                    SelectedItemBinding="{Binding Branch, UpdateSourceTrigger=PropertyChanged}"
                                                    ItemsSource="{StaticResource BranchOptions}"/>

                            <DataGridTextColumn Header="RelayId"
                                                Binding="{Binding RelayId, UpdateSourceTrigger=PropertyChanged}"
                                                Width="95">
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <EventSetter Event="GotFocus" Handler="TextBox_GotFocus"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="LockerNumber"
                                                Binding="{Binding LockerNumber, UpdateSourceTrigger=PropertyChanged}"
                                                Width="160">
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <EventSetter Event="GotFocus" Handler="TextBox_GotFocus"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="SizeCode"
                                                Binding="{Binding SizeCode, UpdateSourceTrigger=PropertyChanged}"
                                                Width="120">
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <EventSetter Event="GotFocus" Handler="TextBox_GotFocus"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Zone"
                                                Binding="{Binding Zone, UpdateSourceTrigger=PropertyChanged}"
                                                Width="160">
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <EventSetter Event="GotFocus" Handler="TextBox_GotFocus"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <DataGridCheckBoxColumn Header="Enabled"
                                                    Binding="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="*" MinWidth="110"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Status / errors -->
                <Border Grid.Row="2"
                        CornerRadius="14"
                        Background="#30FFFFFF"
                        Padding="14">
                    <TextBlock x:Name="StatusText"
                               FontSize="18"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                </Border>

            </Grid>
        </Viewbox>
    </Grid>
</Window>
